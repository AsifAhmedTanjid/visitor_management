<odoo>
    <record id="hr_employee_view_form_inherit_visitors" model="ir.ui.view">
        <field name="name">hr.employee.form.visitors</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Visitors">
                    <field name="visitor_ids">
                        <list>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
