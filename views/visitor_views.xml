<odoo>

    <record id="visitor_form" model="ir.ui.view">
        <field name="name">visitor.form</field>
        <field name="model">visitor.visitor</field>
        <field name="arch" type="xml">
            <form string="Visitor">
                <header>
                    <button string="Check In" name="action_check_in" type="object" class="btn-primary" invisible="status != 'draft'"/>
                    <button string="Check Out" name="action_check_out" type="object" class="btn-primary" invisible="status != 'checked_in'"/>
                     <button string="Visitor Card"
            name="action_print_visitor_card"
            type="object"
            class="btn-secondary"/>
                </header>
                <sheet>
                    <group >
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="purpose"/>
                        <field name="status" readonly="1"/>
                        <field name="check_in" readonly="1"/>
                        <field name="check_out" readonly="1"/>
                        <field name="stay_duration" readonly="1"/>
                        <field name="employees_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                    <!-- <footer>
                        <button string="Check In" name="action_check_in" type="object" class="btn-primary" />
                        <button string="Check Out" name="action_check_out" type="object" class="btn-primary" />
                    </footer> -->
            </form>
        </field>
    </record>

    <record id="visitor_list" model="ir.ui.view">
        <field name="name">visitor.list</field>
        <field name="model">visitor.visitor</field>
        <field name="arch" type="xml">
            <list decoration-danger="late_checkout">
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="status"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="stay_duration"/>
                <field name="late_checkout" column_invisible="1"/>
                <field name="employees_ids" widget="many2many_tags"/>

                
            </list>
        </field>
    </record>

    <record id="visitor_search" model="ir.ui.view">
        <field name="name">visitor.search</field>
        <field name="model">visitor.visitor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="purpose"/>
                <field name="employees_ids"/>

                <filter name="checked_in" string="Checked In" domain="[('status','=','checked_in')]"/>
                <filter name="checked_out" string="Checked Out" domain="[('status','=','checked_out')]"/>
                <filter name="pending" string="Pending" domain="[('status','=','draft')]"/>
                <filter string="Has Employees" name="has_employees" domain="[('employees_ids','!=',False)]"/>

                <group>
                    <filter name="group_by_address" string="Address" context="{'group_by':'address'}"/>
                    <filter string="Employee" name="group_by_employee" context="{'group_by':'employees_ids'}"/>
                </group>
            </search>
        </field>
    </record>
    

    <record id="visitor_action" model="ir.actions.act_window">
        <field name="name">Visitors</field>
        <field name="res_model">visitor.visitor</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="visitor_search"/>
    </record>

</odoo>